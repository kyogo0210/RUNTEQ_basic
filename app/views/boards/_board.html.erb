<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-1">
    <div class="card">
        <%= image_tag board.board_image_url, size:'300x200', class: "card-img-top" %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to board.title, '#' %>
        </h4>
        <div class='mr10 float-right'>
          <%= link_to '#', id: 'button-edit-#{board.id}' do %>
            <%= icon('fas', 'pen') %>
          <% end %>
          <%= link_to '#', id: 'button-delete-#{board.id}', method: :delete, data: {confirm: ''} do %>
            <%= icon('fas', 'trash') %>
          <% end %>
        </div>
        <ul class="list-inline">
            <li class="list-inline-item"><i class="fas fa-user"><%= board.user.decorate.full_name %></i></li><br>
            <li class="list-inline-item"><i class="fas fa-calendar-alt"><%= l board.created_at, format: :long %></i></li>
        </ul>
        <p class="card-text"><%= board.body %></p>
      </div>
    </div>
  </div>
</div>
